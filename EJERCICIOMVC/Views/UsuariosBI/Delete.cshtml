        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.US_Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.US_Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.US_Tipodedocumento)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.US_Tipodedocumento)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.US_Documento)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.US_Documento)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

<div class="form-actions no-color">
    <input type="submit" value="Borrar" class="btn btn-danger" /> |
