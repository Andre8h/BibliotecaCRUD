@model EJERCICIOMVC.Models.Usuario

@{
    ViewBag.Title = "Delete";
}

<h2>Borrar</h2>

<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.US_Codigo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.US_Codigo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.US_Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.US_Nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.US_Estado)
        </dt>

        <dd>
